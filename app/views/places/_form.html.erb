<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<%= bootstrap_form_for(@place, layout: :horizontal) do |f| %>
    <%= f.text_field :pid %>
    <%= f.text_field :name %>
    <%= f.select :camp_id, options_for_select(current_organization.camps.all.order('name').map{ |c| [c.name, c.id, {'data-latitude' => c.latitude}, {'data-longitude' => c.longitude}]}, selected_key = f.object.camp_id) %>
    <%= f.select :faculty_id, options_for_select(current_organization.faculties.all.order('nick').map{ |c| [c.nick, c.id, {'data-latitude' => c.latitude}, {'data-longitude' => c.longitude}]}, selected_key = f.object.faculty_id), include_blank: '-- Select a Faculty --' %>
    <%= f.number_field :latitude %>
    <%= f.number_field :longitude %>
    <%= f.number_field :floor %>
    <%= f.text_area :description %>
    <%= f.text_field :icon %>

    <div id="map-container">
      <div id="map"></div>
    </div>

    <% content_for :scripts do %>
        <script type='text/javascript'>

            var markersArray = [];

            handler = Gmaps.build('Google');
            handler.buildMap({ provider: {mapTypeId: google.maps.MapTypeId.HYBRID}, internal: {id: 'map'}}, function(){
                var jsonMarkers = <%=raw @hash.to_json %>;
                if (jsonMarkers !== null && jsonMarkers.length !== 0) {
                    markersArray = handler.addMarkers(jsonMarkers);
                    handler.bounds.extendWith(markersArray);
                    handler.fitMapToBounds();
                    handler.getMap().setZoom(18);
                } else {
                    handler.fitMapToBounds();
                    handler.map.centerOn([-33.452585, -70.642493]);
                    handler.getMap().setZoom(10);
                }
            });

            google.maps.event.addListener(handler.getMap(), 'click', function(event) {
                clearOverlays();
                placeMarker(event.latLng);
                updateFormLocation(event.latLng);
            });

            // Update form attributes with given coordinates
            function updateFormLocation(latLng) {
                document.getElementById("place_latitude").value = latLng.lat();
                document.getElementById("place_longitude").value = latLng.lng();
                //$('place_latitude').val(latLng.lat());
                //$('place_longitude').val(latLng.lng());
                //$('place_zoom').val(Gmaps.map.map.getZoom());
            }
            // Add a marker with an open infowindow
            function placeMarker(latLng) {
                var marker = new google.maps.Marker({
                    position: latLng,
                    map: handler.getMap(),
                    draggable: true
                });
                markersArray.push(marker);
                // Set and open infowindow
                var infowindow = new google.maps.InfoWindow({
                    content: '<div class="popup"><h2>Genial!</h2><p>Arrastra para ajustar.</p>'
                });
                infowindow.open(handler.getMap(),marker);
                // Listen to drag & drop
                google.maps.event.addListener(marker, 'dragend', function() {
                    updateFormLocation(this.getPosition());
                });
            }
            // Removes the overlays from the map
            function clearOverlays() {
                if (markersArray) {
                    for (var i = 0; i < markersArray.length; i++ ) {
                        markersArray[i].setMap(null);
                    }
                }
                markersArray.length = 0;
            }
        </script>
    <% end %>

    <%= f.form_group do %>
        <%= f.submit %>
    <% end %>
<% end %>
