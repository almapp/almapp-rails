<%- model_class = Place -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:pid) %></th>
    <th><%= model_class.human_attribute_name(:camp) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:faculty) %></th>
    <th><%= model_class.human_attribute_name(:latitude) %></th>
    <th><%= model_class.human_attribute_name(:longitude) %></th>
    <th><%= model_class.human_attribute_name(:floor) %></th>
    <th><%= model_class.human_attribute_name(:description) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @places.each do |place| %>
      <tr>
        <td><%= link_to place.id, organization_place_path(@organization, place), 'data-no-turbolink' => true %></td>
        <td><%= link_to place.pid, organization_place_path(@organization, place), 'data-no-turbolink' => true %></td>
        <td><%= link_to place.camp.cid, organization_camp_path(@organization, place.camp) %></td>
        <td><%= link_to place.name, organization_place_path(@organization, place), 'data-no-turbolink' => true %></td>
        <% if place.faculty.present? %>
            <td><%= link_to place.faculty.fid, organization_faculty_path(@organization, place.faculty) %></td>
        <% else %>
            <td></td>
        <% end %>
        <td><%= place.latitude %></td>
        <td><%= place.longitude %></td>
        <td><%= place.floor %></td>
        <td><%= place.description %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_organization_place_path(@organization, place), 'data-no-turbolink' => true, :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      organization_place_path(@organization, place),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_organization_place_path(@organization),
            :class => 'btn btn-primary' %>
