<%= bootstrap_form_for(@faculty, layout: :horizontal) do |f| %>
    <%= f.text_field :fid %>
    <%= f.text_field :name %>
    <%= f.text_field :short_name %>
    <%= f.text_field :address %>
    <%= f.url_field :url %>
    <%= f.url_field :facebook %>
    <%= f.url_field :twitter %>
    <%= f.phone_field :phone %>
    <%= f.email_field :email %>
    <%= f.text_area :description %>
    <%= f.text_field :latitude %>
    <%= f.text_field :longitude %>
    <%= f.text_field :icon %>
    <%= f.number_field :zoom %>
    <%= f.number_field :angle %>
    <%= f.number_field :tilt %>

    <%= f.form_group do %>
        <%= f.submit %>
    <% end %>
<% end %>
