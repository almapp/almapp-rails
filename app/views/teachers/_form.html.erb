<%= bootstrap_form_for(@teacher, url: [@faculty, @teacher],  layout: :horizontal, label_errors: true, inline_errors: true) do |f| %>
    <%= f.text_field :name %>
    <%= f.text_field :email %>
    <%= f.text_field :url %>
    <%= f.text_area :information %>

    <%= f.form_group do %>
        <%= f.submit %>
    <% end %>
<% end %>