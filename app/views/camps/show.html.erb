<%- model_class = Camp -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cid) %>:</strong></dt>
  <dd><%= @camp.cid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @camp.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:organization_id) %>:</strong></dt>
  <dd><%= link_to @camp.organization.name, organization_path(@camp.organization) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @camp.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @camp.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @camp.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @camp.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @camp.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:icon) %>:</strong></dt>
  <dd><%= @camp.icon %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zoom) %>:</strong></dt>
  <dd><%= @camp.zoom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:angle) %>:</strong></dt>
  <dd><%= @camp.angle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tilt) %>:</strong></dt>
  <dd><%= @camp.tilt %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              organization_camps_path(@organization), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_organization_camp_path(@organization, @camp), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              organization_camp_path(@organization, @camp),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
