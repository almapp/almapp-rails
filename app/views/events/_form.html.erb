<%= form_for(@event, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :publish_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :publish_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :place, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :place, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :from_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :from_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :to_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :to_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :slug, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :slug, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :user, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :group, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :group, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebook_url, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :facebook_url, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :external_url, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :external_url, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :private, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :private, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
